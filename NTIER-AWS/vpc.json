{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Template for the ntier vpc",
    "Parameters": {
        "vpccidr": {
            "Description": "this is for the vpc Cidr block ",
            "Type": "String",
            "Default": "192.168.0.0/16"
        },
        "subnetcidrs": {
            "Description": "-",
            "Type": "List<String>",
            "Default": "192.168.0.0/24,192.168.1.0/24,192.168.2.0/24,192.168.3.0/24"
        },
        "web1Az": {
            "Description": "this is the availability of web1",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        },
        "web2Az": {
            "Description": "this is the availability of web2",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        },
        "db1Az": {
            "Description": "this is the availability of db1",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        },
        "db2Az": {
            "Description": "this is the availability of db2",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        },
        "dbSize": {
            "Description": "Allocated storage for the database",
            "Type": "String",
            "Default": "20"
        },
        "dbsizetype": {
            "Description": "this is db instance class",
            "Type": "String",
            "Default": "db.t2.micro"
        },
        "BackupRetentionperion": {
            "Description": "for backup of the database ",
            "Type": "Number",
            "Default": 0
        },
        "DBservername": {
            "Description": "Name of the database ",
            "Type": "String",
            "Default": "ecomercedb"
        },
        "DBname": {
            "Description": "name of the database",
            "Type": "String",
            "Default": "mysqldbinstance"
        },
        "Masterusername": {
            "Description": "User name of the database",
            "Type": "String",
            "Default": "admin"
        },
        "Mastepassword": {
            "Description": "password of the master user ",
            "Type": "String",
            "Default": "adminadmin"
        },
        "MultiAz": {
            "Description": "if multAZ required for database ",
            "Type": "String",
            "Default": "false",
            "AllowedValues": [
                "true",
                "false"
            ]
        },
        "keypairs": {
            "Description": "keypairs for the webinstance",
            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "webinstancetype": {
            "Description": "type of the webinstance ",
            "Type": "String",
            "Default": "t2.micro"
        }
    },
    "Resources": {
        "ntiervpc": {
            "Description": "this is a vpc for ntier",
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "vpccidr"
                },
                "EnableDnsHostnames": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ntier"
                    }
                ]
            }
        },
        "web1": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "web1Az"
                },
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "CidrBlock": {
                    "Fn::Select": [
                        0,
                        {
                            "Ref": "subnetcidrs"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "web1"
                    }
                ]
            }
        },
        "web2": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "web2Az"
                },
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "CidrBlock": {
                    "Fn::Select": [
                        1,
                        {
                            "Ref": "subnetcidrs"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "web2"
                    }
                ]
            }
        },
        "db1": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "db1Az"
                },
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "CidrBlock": {
                    "Fn::Select": [
                        2,
                        {
                            "Ref": "subnetcidrs"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "db1"
                    }
                ]
            }
        },
        "db2": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "db2Az"
                },
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "CidrBlock": {
                    "Fn::Select": [
                        3,
                        {
                            "Ref": "subnetcidrs"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "db2"
                    }
                ]
            }
        },
        "ntierigw": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ntier-igw"
                    }
                ]
            }
        },
        "AttachGateway": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "InternetGatewayId": {
                    "Ref": "ntierigw"
                }
            }
        },
        "PublicRT": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "PublicRT"
                    }
                ]
            }
        },
        "web1rtassociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "web1"
                },
                "RouteTableId": {
                    "Ref": "PublicRT"
                }
            }
        },
        "web2rtassociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "web2"
                },
                "RouteTableId": {
                    "Ref": "PublicRT"
                }
            }
        },
        "RtIgw": {
            "Type": "AWS::EC2::Route",
            "Properties": {
                "RouteTableId": {
                    "Ref": "PublicRT"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "ntierigw"
                }
            }
        },
        "Privatert": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Privatert"
                    }
                ]
            }
        },
        "db1rtassociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "db1"
                },
                "RouteTableId": {
                    "Ref": "Privatert"
                }
            }
        },
        "db2rtassociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "db2"
                },
                "RouteTableId": {
                    "Ref": "Privatert"
                }
            }
        },
        "ntiersg": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": " this is a security groupd for ntier ",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "80",
                        "ToPort": "80",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "443",
                        "ToPort": "443",
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "openssh"
                    }
                ]
            }
        },
        "mysqldbsg": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "security group for mysql database",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "3306",
                        "ToPort": "3306",
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "mysqlsg"
                    }
                ]
            }
        },
        "mysqldbsubnetgroup": {
            "Type": "AWS::RDS::DBSubnetGroup",
            "Properties": {
                "DBSubnetGroupDescription": "this is a mysqldbsubnetgroup ",
                "SubnetIds": [
                    {
                        "Ref": "db1"
                    },
                    {
                        "Ref": "db2"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "dbsubnetgroup"
                    }
                ]
            }
        },
        "mysqlinstance": {
            "Type": "AWS::RDS::DBInstance",
            "Properties": {
                "AllocatedStorage": {
                    "Ref": "dbSize"
                },
                "DBInstanceClass": {
                    "Ref": "dbsizetype"
                },
                "AllowMajorVersionUpgrade": "false",
                "AutoMinorVersionUpgrade": "false",
                "BackupRetentionPeriod": {
                    "Ref": "BackupRetentionperion"
                },
                "DBInstanceIdentifier": {
                    "Ref": "DBservername"
                },
                "DBName": {
                    "Ref": "DBname"
                },
                "DBSubnetGroupName": {
                    "Ref": "mysqldbsubnetgroup"
                },
                "Engine": "mysql",
                "MasterUsername": {
                    "Ref": "Masterusername"
                },
                "MasterUserPassword": {
                    "Ref": "Mastepassword"
                },
                "MultiAZ": {
                    "Ref": "MultiAz"
                },
                "PubliclyAccessible": "false",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ntierdb"
                    }
                ],
                "VPCSecurityGroups": [
                    {
                        "Ref": "mysqldbsg"
                    }
                ]
            }
        },
        "webinstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": {
                    "Ref": "keypairs"
                },
                "ImageId": "ami-07ffb2f4d65357b42",
                "InstanceType": {
                    "Ref": "webinstancetype"
                },
                "Monitoring": "false",
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": true,
                        "DeleteOnTermination": true,
                        "DeviceIndex": 0,
                        "GroupSet": [
                            {
                                "Ref": "ntiersg"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "web1"
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "web1"
                    }
                ]
            }
        }
    }
}